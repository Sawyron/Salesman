<Window x:Class="WpfUI.UI.Main.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfUI"
        xmlns:main="clr-namespace:WpfUI.UI.Main"
        xmlns:graph="clr-namespace:WpfUI.UI.Graph"
        d:DataContext="{d:DesignInstance Type=main:MainViewModel}"
        mc:Ignorable="d"
        Title="Salesman"
        Height="450"
        Width="800"
        WindowStartupLocation="CenterScreen"
        Closed="Window_Closed">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="auto" />
        </Grid.RowDefinitions>
        <Menu Grid.Row="0">
            <MenuItem Header="File">
                <MenuItem Header="Exit" Command="{Binding ExitCommand}"/>
            </MenuItem>
            <MenuItem Header="Settings">
                <MenuItem Header="Edges" Command="{Binding OpenEdgeSettingsWindowCommand}"/>
            </MenuItem>
        </Menu>
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions >
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Grid Grid.Column="0">
                <Border BorderBrush="MediumAquamarine" BorderThickness="1">
                    <StackPanel Margin="10">
                        <Button Content="Calculate path" FontSize="16" Command="{Binding FindPathCommand}"/>
                    </StackPanel>
                </Border>
            </Grid>
            <Grid Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="auto" />
                </Grid.RowDefinitions>
                <Border Grid.Row="0" BorderBrush="MediumAquamarine" BorderThickness="1">
                    <Grid>
                        <graph:GraphConnectionControl Connections="{Binding Connections, Mode=OneWay}" />
                        <graph:GraphNodesControl
                            Nodes="{Binding Nodes, Mode=OneWay}"
                            OnClickCommand="{Binding OnAreaClickCommand}"
                            OnNodeClickCommand="{Binding RemoveNodeCommand}"
                            Radius="{Binding NodeRadius, Mode=OneWay}"/>
                    </Grid>
                </Border>
                <Grid Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="auto" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="auto" />
                        <RowDefinition Height="auto" />
                    </Grid.RowDefinitions>
                    <TextBlock Grid.Row="0" Grid.Column="0" Text="Lenght" TextAlignment="Center" /> 
                    <TextBlock Grid.Row="0" Grid.Column="1" Text="Path" TextAlignment="Center" /> 
                    <TextBox IsReadOnly="True" Grid.Row="1" Grid.Column="0" Text="{Binding PathLength}" TextAlignment="Center"/>
                    <TextBox
                        IsReadOnly="True"
                        Grid.Row="1"
                        Grid.Column="1"
                        Text="{Binding PathLabel}"
                        TextWrapping="Wrap"
                        TextAlignment="Center"/>
                </Grid>
            </Grid>
        </Grid>
        <main:StatusBarControl
            Grid.Row="2"
            IsInProcess="{Binding IsInProgress}" TimeLabel="{Binding TimeLabel}" />
    </Grid>
</Window>
