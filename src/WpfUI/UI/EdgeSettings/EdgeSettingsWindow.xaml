<Window x:Class="WpfUI.UI.EdgeSettings.EdgeSettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfUI.UI.EdgeSettings"
        xmlns:data="clr-namespace:WpfUI.Data"
        d:DataContext="{d:DesignInstance Type=local:EdgeSettingsViewModel}"
        mc:Ignorable="d"
        Title="Edge settings" Height="450" Width="800"
        WindowStartupLocation="CenterOwner">
    <Grid>
        <DataGrid AutoGenerateColumns="False" ItemsSource="{Binding Edges}">
            <DataGrid.Columns>
                <DataGridTextColumn Header="From" Binding="{Binding Path=FromId}" IsReadOnly="True" />
                <DataGridTextColumn Header="To" Binding="{Binding Path=ToId}" IsReadOnly="True" />
                <DataGridTextColumn Header="Value" Binding="{Binding Path=Value}" />
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>
